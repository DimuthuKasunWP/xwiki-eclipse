<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            contributorClass="org.xwiki.plugins.eclipse.editors.XWikiEditorContributor"
            extensions="xw"
            name="XWiki Editor"
            icon="icons/xwiki-editor.png"
            class="org.xwiki.plugins.eclipse.editors.XWikiEditor"
            id="org.xwiki.plugins.eclipse.editors.XWikiEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="XWiki"
            id="XWiki">
      </category>
      <view
            name="XWiki Navigator"
            icon="icons/xwiki-navigator.png"
            category="XWiki"
            class="org.xwiki.plugins.eclipse.views.navigator.XWikiNavigator"
            id="org.xwiki.plugins.eclipse.views.XWikiNavigator">
      </view>
      <view
            category="XWiki"
            class="org.xwiki.xeclipse.views.XWikiExplorerView"
            icon="icons/xwiki.png"
            id="org.xwiki.xeclipse.views.XWikiExplorer"
            name="XWiki explorer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               relative="org.eclipse.ui.views.TaskList"
               ratio="0.5"
               relationship="right"
               id="org.xwiki.plugins.eclipse.views.XWikiNavigator">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.xwiki.plugins.eclipse.model.IXWikiConnection"
            class="org.xwiki.plugins.eclipse.model.adapters.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
      <factory
            adaptableType="org.xwiki.plugins.eclipse.model.IXWikiSpace"
            class="org.xwiki.plugins.eclipse.model.adapters.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
      <factory
            adaptableType="org.xwiki.plugins.eclipse.model.IXWikiPage"
            class="org.xwiki.plugins.eclipse.model.adapters.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.xwiki.xeclipse.command.Connect"
            name="Connect">
      </command>
      <command
            id="org.xwiki.xeclipse.command.Disconnect"
            name="Disconnect">
      </command>
      <command
            defaultHandler="org.xwiki.xeclipse.handlers.NewConnectionHandler"
            id="org.xwiki.xeclipse.command.NewConnection"
            name="New connection">
      </command>
   </extension>
   <extension
         name="NEW ADAPTERS"
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.xwiki.xeclipse.model.IXWikiConnection"
            class="org.xwiki.xeclipse.adapters.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
      <factory
            adaptableType="org.xwiki.xeclipse.model.IXWikiSpace"
            class="org.xwiki.xeclipse.adapters.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
      <factory
            adaptableType="org.xwiki.xeclipse.model.IXWikiPage"
            class="org.xwiki.xeclipse.adapters.AdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
   </extension>

</plugin>
